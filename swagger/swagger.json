{
  "openapi": "3.0.3",
  "info": {
    "title": "my-todolist API",
    "description": "간편한 할일 관리 애플리케이션 - 사용자 인증 및 할일 관리를 위한 RESTful API",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@my-todolist.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001/api",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "사용자 인증 관련 API (회원가입, 로그인)"
    },
    {
      "name": "Todos",
      "description": "할일 관리 API (CRUD 및 완료 상태 관리)"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "회원가입",
        "description": "새로운 사용자 계정을 생성합니다. 이메일 형식 검증 및 중복 사용자명 체크를 수행합니다.",
        "operationId": "registerUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "email", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 50,
                    "description": "사용자명 (3-50자)",
                    "example": "johndoe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "이메일 주소",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "minLength": 8,
                    "description": "비밀번호 (최소 8자)",
                    "example": "SecurePass123!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "회원가입 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User registered successfully"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 - 유효성 검증 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "invalidEmail": {
                    "summary": "E-003: 잘못된 이메일 형식",
                    "value": {
                      "error": "E-003",
                      "message": "Invalid email format"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "사용자명 중복",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "usernameExists": {
                    "summary": "E-001: 사용자명 이미 존재",
                    "value": {
                      "error": "E-001",
                      "message": "Username already exists"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "로그인",
        "description": "사용자 인증 후 JWT 토큰을 발급합니다.",
        "operationId": "loginUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "사용자명",
                    "example": "johndoe"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "비밀번호",
                    "example": "SecurePass123!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login successful"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "token": {
                      "type": "string",
                      "description": "JWT 인증 토큰",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "invalidCredentials": {
                    "summary": "E-002: 잘못된 인증 정보",
                    "value": {
                      "error": "E-002",
                      "message": "Invalid credentials"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/todos": {
      "get": {
        "tags": ["Todos"],
        "summary": "할일 목록 조회",
        "description": "인증된 사용자의 할일 목록을 조회합니다.",
        "operationId": "getTodos",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "할일 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "unauthorized": {
                    "summary": "E-101: 인증 필요",
                    "value": {
                      "error": "E-101",
                      "message": "Authentication required"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Todos"],
        "summary": "할일 추가",
        "description": "새로운 할일을 생성합니다. 제목은 필수이며, 설명과 마감일은 선택사항입니다.",
        "operationId": "createTodo",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title"],
                "properties": {
                  "title": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 255,
                    "description": "할일 제목 (필수)",
                    "example": "프로젝트 기획서 작성"
                  },
                  "description": {
                    "type": "string",
                    "description": "할일 상세 설명 (선택)",
                    "example": "Q1 신규 프로젝트 기획서 초안 작성"
                  },
                  "due_date": {
                    "type": "string",
                    "format": "date",
                    "description": "마감일 (선택, YYYY-MM-DD 형식)",
                    "example": "2026-02-20"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "할일 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "missingTitle": {
                    "summary": "E-103: 제목 누락",
                    "value": {
                      "error": "E-103",
                      "message": "Title is required"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/todos/{id}": {
      "put": {
        "tags": ["Todos"],
        "summary": "할일 수정",
        "description": "기존 할일의 정보를 수정합니다. 본인의 할일만 수정 가능합니다.",
        "operationId": "updateTodo",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "할일 ID",
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "할일 제목",
                    "example": "프로젝트 기획서 최종 검토"
                  },
                  "description": {
                    "type": "string",
                    "description": "할일 상세 설명",
                    "example": "피드백 반영 후 최종 검토"
                  },
                  "due_date": {
                    "type": "string",
                    "format": "date",
                    "description": "마감일",
                    "example": "2026-02-25"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "할일 수정 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "접근 거부",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "accessDenied": {
                    "summary": "E-102: 접근 거부",
                    "value": {
                      "error": "E-102",
                      "message": "Access denied"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "할일을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "notFound": {
                    "summary": "E-104: 할일을 찾을 수 없음",
                    "value": {
                      "error": "E-104",
                      "message": "Todo not found"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Todos"],
        "summary": "할일 삭제",
        "description": "할일을 삭제합니다. 본인의 할일만 삭제 가능합니다.",
        "operationId": "deleteTodo",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "할일 ID",
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "204": {
            "description": "할일 삭제 성공 (응답 본문 없음)"
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "접근 거부",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "할일을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/todos/{id}/complete": {
      "patch": {
        "tags": ["Todos"],
        "summary": "할일 완료 토글",
        "description": "할일의 완료 상태를 토글합니다 (완료 ↔ 미완료). 본인의 할일만 수정 가능합니다.",
        "operationId": "toggleTodoComplete",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "할일 ID",
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "완료 상태 토글 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "접근 거부",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "할일을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "사용자 고유 ID",
            "example": 1
          },
          "username": {
            "type": "string",
            "description": "사용자명",
            "example": "johndoe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "이메일 주소",
            "example": "john@example.com"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "계정 생성일시",
            "example": "2026-02-11T10:30:00Z"
          }
        },
        "required": ["id", "username", "email", "created_at"]
      },
      "Todo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "할일 고유 ID",
            "example": 1
          },
          "user_id": {
            "type": "integer",
            "description": "소유자 사용자 ID",
            "example": 1
          },
          "title": {
            "type": "string",
            "description": "할일 제목",
            "example": "프로젝트 기획서 작성"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "description": "할일 상세 설명",
            "example": "Q1 신규 프로젝트 기획서 초안 작성"
          },
          "due_date": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "마감일",
            "example": "2026-02-20"
          },
          "is_completed": {
            "type": "boolean",
            "description": "완료 여부",
            "example": false
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "생성일시",
            "example": "2026-02-11T10:30:00Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "최종 수정일시",
            "example": "2026-02-11T10:30:00Z"
          }
        },
        "required": ["id", "user_id", "title", "is_completed", "created_at", "updated_at"]
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "에러 코드",
            "example": "E-001"
          },
          "message": {
            "type": "string",
            "description": "에러 메시지",
            "example": "Username already exists"
          }
        },
        "required": ["error", "message"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT 토큰을 사용한 인증. 로그인 또는 회원가입 시 발급받은 토큰을 Authorization 헤더에 포함합니다."
      }
    }
  }
}
